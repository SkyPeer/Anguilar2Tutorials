{
    "compilerOptions": {
        "outDir": "build/debug",
        "target": "es5",
        "module": "es2015",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "removeComments": true,
        "noImplicitAny": true,
        "inlineSourceMap":true,
        "pretty":true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files":[
        "application/main.ts",
        "./typings/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "angularCompilerOptions": {

        "skipMetadataEmit": true
    }
}